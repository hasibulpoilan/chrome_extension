{
  "manifest_version": 2,
  "name": "LinkedIn Profile Scraper",
  "version": "1.0",
  "description": "Scrapes LinkedIn profiles and sends data to API",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Scraper"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
